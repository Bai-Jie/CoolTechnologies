<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.optimalorange.cooltechnologies.ui.fragment.ListCommentsFragment"
        >
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/comments_margin_5dp"
                android:background="@color/cardview_light_background"
                card_view:contentPadding="@dimen/comments_padding_10dp"
                >
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/comments_margin_5dp"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/text_black"
                            android:text="@string/comments_title"
                            />
                    <TextView
                            android:id="@+id/comments_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_micro"
                            android:textColor="@color/text_black"
                            />
                </LinearLayout>
                <Button
                        android:id="@+id/login"
                        android:layout_width="@dimen/login_button_width"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login"
                        />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comments_margin_5dp"
                android:layout_marginRight="@dimen/comments_margin_5dp"
                android:background="@color/cardview_light_background"
                >
            <ListView
                    android:id="@+id/comments_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    />
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comments_margin_5dp"
            android:layout_marginRight="@dimen/comments_margin_5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_light_background"
            android:visibility="gone"
            >
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/comments_edit_margin"
                    android:maxEms="@integer/comment_word_number"
                    android:hint="@string/comment_word_number"
                    android:textColorHint="@color/text_disabled_or_hint_black"
                    />
            <ImageView
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/comments_margin_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_send_black_24dp"
                    />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
